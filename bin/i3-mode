#!/bin/sh

if [ $# -lt 1 ]; then
    echo "Usage: $0 <mode>" 1>&2
    echo "       modes: mobile|homedocking|workdocking" 1>&2
    exit 1
else
    mode=$1
fi

xrandr --auto

case "$mode" in
    mobile)
        nmcli radio wifi on
        ;;

    homedocking)
        xrandr --output eDP-1 --off
        nmcli radio wifi off
        ;;

    workdocking)
        xrandr --output eDP-1 --off
        nmcli radio wifi off
        # FIXME: Set up two monitors.
        ;;

    *)
        echo "No such mode: $mode" 1>&2
        exit 1
        ;;
esac
